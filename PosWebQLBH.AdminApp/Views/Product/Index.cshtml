@using PosWebQLBH.ViewModels.Common;
@model PagedResult<PosWebQLBH.ViewModels.Catalog.Products.ProductViewModel>

@{
    ViewData["Title"] = "Danh Sách Sản Phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts{
    <script>
        setTimeout(function () {
            $('#msgAlert').fadeOut('slow');
        }, 3000);
    </script>
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Danh Sách Sản Phẩm</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Trang Chủ</a></li>
        <li class="breadcrumb-item active">Danh sách Product</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <a class="btn btn-success" asp-action="Create" asp-controller="Product">Tạo mới</a>
            <!--Tìm kiếm theo keyword ( nhưng mà nhìn nó phèn hơn JS )-->
            @*<form asp-action="Index" method="get">
                    <div class="row">
                        <div class="col-md-9">
                            <input type="text" value="@ViewBag.Keyword" name="keyword" class="form-control" />
                        </div>
                        <div class="cold-md-3">
                            <button type="submit" class="btn btn-primary">Tìm</button>
                            <button type="button" onclick="window.location.href='/Product/Index'" class="btn btn-dark">Reset</button>
                        </div>
                    </div>
                </form>*@
        </div>

        <div class="card-body">
            <!--alert thông báo-->
            @if (ViewBag.SuccessMess != null)
            {
                <div id="msgAlert" class="alert alert-success" role="alert">
                    @ViewBag.SuccessMess
                </div>
            }

            <!-- id="datatablesSimple" -->
            <table class="table table-bordered" id="datatablesSimple">
                <thead>
                    <tr>
                        <th>
                            Option
                        </th>
                        <th>
                            Mã sản phẩm
                        </th>
                        <th>
                            Tên sản phẩm
                        </th>
                        <th>
                            Giá
                        </th>
                        <th>
                            Số lượng
                        </th>
                        <th>
                            Loại
                        </th>
                        <th>
                            Đơn vị
                        </th>
                        <th>
                            Chiều dài
                        </th>
                        <th>
                            Chiều rộng
                        </th>
                        <th>
                            Chiều cao
                        </th>
                        <th>
                            Cân nặng
                        </th>
                        <th>
                            Tạo bởi
                        </th>
                        <th>
                            Ngày tạo
                        </th>
                        <th>
                            Cập nhật bởi
                        </th>
                        <th>
                            Ngày cập nhật
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>
                                @Html.ActionLink("Sửa", "Edit", new { id = item.ID }) |
                                @Html.ActionLink("Chi Tiết", "Details", new { id = item.ID }) |
                                @Html.ActionLink("Xóa", "Delete", new { id = item.ID })
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name_Product)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Quantity)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name_Category)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name_Unit)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Length)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Width)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Height)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Weight)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedBy)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UpdatedBy)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UpdatedDate)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @await Component.InvokeAsync("Pager", Model) <!--Phân trang-->
        </div>
    </div>
</div>