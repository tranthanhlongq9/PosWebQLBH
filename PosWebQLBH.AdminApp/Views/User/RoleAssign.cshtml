@model PosWebQLBH.ViewModels.System.Users.RoleAssignRequest

@{
    ViewData["Title"] = "Gán Quyền User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Gán Quyền Người Dùng</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Trang Chủ</a></li>
        <li class="breadcrumb-item active">Gán quyền User</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <a class="btn btn-success" asp-action="Index" asp-controller="User">Về danh sách User</a>
        </div>

        <div class="card-body">
            <form asp-action="RoleAssign">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="Id" />

                @*@for (var i = 0; i < Model.Roles.Count; i++)
                    {
                        <div class="form-group">
                            <label>
                                @Model.Roles[i].Name

                                <input type="checkbox" asp-for="Roles[i].Selected" />
                                <input type="hidden" asp-for="Roles[i].Id" />
                                <input type="hidden" asp-for="Roles[i].Name" />
                            </label>
                        </div>
                    }*@

                <table class="table table-bordered" id="datatablesSimple">
                    <thead>
                        <tr>
                            <th>
                                Tên quyền hạn
                            </th>
                            <th>
                                Trạng thái
                            </th>
                            <th>
                                Thông tin quyền hạn
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (var i = 0; i < Model.Roles.Count; i++)
                        {
                            <tr>
                                <td>
                                    @Model.Roles[i].Name
                                </td>
                                <td>
                                    <input type="checkbox" asp-for="Roles[i].Selected" />
                                    <input type="hidden" asp-for="Roles[i].Id" />
                                    <input type="hidden" asp-for="Roles[i].Name" />
                                </td>
                                <td>
                                    @Model.Roles[i].Description
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <br />
                <div class="form-group">
                    <input type="submit" value="Lưu lại" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>